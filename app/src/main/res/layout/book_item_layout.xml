<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/book_title"
        android:layout_width="@dimen/fill_space"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_width_mid"
        android:layout_marginStart="@dimen/margin_width_mid"
        android:layout_marginTop="@dimen/margin_height_small"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?android:textAppearanceListItem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/published_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="@dimen/fill_space"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_height_mid"
        android:layout_marginEnd="@dimen/margin_width_mid"
        android:layout_marginStart="@dimen/margin_width_mid"
        android:layout_marginTop="@dimen/margin_height_small"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/published_date"
        app:layout_constraintTop_toBottomOf="@+id/book_title"
        tools:text="Author"/>

    <TextView
        android:id="@+id/published_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_width_mid"
        app:layout_constraintBottom_toBottomOf="@+id/book_author"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/book_title"
        tools:text="2012-08-03"/>

</android.support.constraint.ConstraintLayout>